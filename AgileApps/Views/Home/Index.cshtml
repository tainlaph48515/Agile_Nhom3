@{
    ViewData["Title"] = "Trang chủ";
}

<div class="container mt-5">
    <h2>📌 Chức năng chính</h2>
    <div class="row mt-4">
        <div class="col-md-4 mb-3">
            <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary w-100 p-3">
                📦 Quản lý Sản phẩm
            </a>
        </div>
        <div class="col-md-4 mb-3">
            <a asp-controller="Product" asp-action="Create" class="btn btn-outline-success w-100 p-3">
                ➕ Thêm Sản phẩm
            </a>
        </div>
        <div class="col-md-4 mb-3">
            <a asp-controller="Cart" asp-action="Index" class="btn btn-outline-warning w-100 p-3">
                🛒 Xem Giỏ hàng
            </a>
        </div>
        <div class="col-md-4 mb-3">
            <a asp-controller="Cart" asp-action="Checkout" class="btn btn-outline-danger w-100 p-3">
                💳 Thanh toán
            </a>
        </div>
    </div>
</div>
