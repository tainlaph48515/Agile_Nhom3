@model Product

<div class="container mt-4">
    <div class="row">
        <div class="col-md-5">
            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded shadow-sm" />
        </div>
        <div class="col-md-7">
            <h2>@Model.Name</h2>
            <p><strong>Giá:</strong> @Model.Price VNĐ</p>
            <p><strong>Màu sắc:</strong> @Model.Color</p>
            <p><strong>Danh mục:</strong> @Model.Category</p>
            <p><strong>Số lượng:</strong> @Model.Stock</p>
            <p class="mt-3">@Model.Description</p>

            <a asp-controller="Cart" asp-action="AddToCart"
               asp-route-id="@Model.Id"
               asp-route-name="@Model.Name"
               asp-route-price="@Model.Price"
               class="btn btn-primary mt-3">🛒 Thêm vào giỏ hàng</a>

            <a asp-action="Index" class="btn btn-secondary mt-3 ms-2">Quay lại</a>
        </div>
    </div>
</div>
